      <form class="d-flex ms-auto" role="search" onsubmit="return navigatePage()">
        <input id="pageSearch" class="form-control me-2" type="search" placeholder="Search pages..." aria-label="Search"/>
        <button class="btn btn-outline-light" type="submit">Search</button>
