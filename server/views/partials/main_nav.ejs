<!--javascript for search function-->
<!--used resources: https://mdbootstrap.com/docs/standard/forms/search/   AND    https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Array/includes-->
<script>
  function navigatePage() {

    // get the input value, clean it by making it all lowercase and getting rid of white spaces
    const input = document.getElementById('pageSearch').value.toLowerCase().trim();

    // Map of pages to multiple frequently used search terms (using arrays for multiple values)
    const pages = {
      '/': ['home', 'main'],
      '/home': ['home', 'main'],
      '/projects': ['projects', 'proj', 'database', 'records'],
      '/how-to': ['how-to', 'navigate', 'guide'],
      '/help': ['help', 'support', 'contact']
    };

    let found = false; // setting the default of finding the page to false, like an implicit deny

    //looping through the map to check if the input matches any of the keywords
    for (const [url, keywords] of Object.entries(pages)) {
      if (keywords.includes(input)) {
        window.location.href = url; // navigate to the page
        found = true;
        break;
      }
    }
    // if nothing is found, a page not found alert pops up
    if (!found) {
      alert("Page not found!");
    }

    return false; // prevent actual form submission since the search bar is a form element
  }
</script>
