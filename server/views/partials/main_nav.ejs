<script>
  function navigatePage() {
    const input = document.getElementById('pageSearch').value.toLowerCase().trim();

    // Map of pages to multiple search terms
    const pages = {
      '/': ['home', 'main'],
      '/home': ['home', 'main'],
      '/projects': ['projects', 'proj', 'database', 'records'],
      '/how-to': ['how-to', 'navigate', 'guide'],
      '/help': ['help', 'support', 'contact']
    };

    let found = false;
    for (const [url, keywords] of Object.entries(pages)) {
      if (keywords.includes(input)) {
        window.location.href = url; // navigate to the page
        found = true;
        break;
      }
    }

    if (!found) {
      alert("Page not found!");
    }

    return false; // prevent form submission
  }
</script>
