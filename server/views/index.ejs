<%- include ./partials/header.ejs %>
<%- include ./partials/main_nav.ejs %>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %> page</p>

<div class="container-fluid my-4">

  <!--Rows to divide content of home page-->
  <div class="row align-items-center banner-row py-2 mx-2">
    <!--Left column of first row for title and logo-->

    <!--Right column of first row for bootstrap carousel-->
      <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000"> <!--interval is for how long each slide lasts before switching to the next, this is autoplay-->
        
        <!--Indicators, these are the buttons used to go from one slide to another-->
        <!--One of the buttons is always valued true in order for bootstrap carousel to work-->
        <div class="carousel-indicators">
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <!--Slide content, images linked here and adjusted to fit the dimensions needed for this website-->
        <!--Object fit and object position top frame the photos so that we focus on the top of the photos-->
        <!--The height is always set to 40% of the height of the display-->
        <div class="carousel-inner">
          <div class="carousel-item active"> <!--This is set to active when page initially loads-->
            <img src="/Asset/Images/welcome_abc.png" class="d-block w-100" style="object-fit: cover; object-position: top; height: 40vh;" alt="driving_slideshow">
          </div>
          <div class="carousel-item">
            <img src="/Asset/Images/insurance_abc.png" class="d-block w-100" style="object-fit: cover; object-position: top; height: 40vh;" alt="handshake_slideshow">
          </div>
          <div class="carousel-item">
            <img src="/Asset/Images/holiday_abc.png" class="d-block w-100" style="object-fit: cover; object-position: bottom; height: 40vh;" alt="family_slideshow">
          </div>
        </div>

        <!--Controls, photos not currently being shown are set to hidden-->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>
  <br>
<%- include ./partials/footer.ejs %>
